{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,                    
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "baseUrl": "./src",                                  
    "outDir": "./dist",                                   
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },                                                  
    "esModuleInterop": true,                                   
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                           
    "strictPropertyInitialization": false,                    
    "skipLibCheck": true                                 
  },
  "exclude":[
    "./node_modules"
  ]
}